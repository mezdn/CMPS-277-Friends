@model Friends.Models.Relations.PostLikedByUser

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">

        @if (Friends.Controllers.HomeController.usernameSignedIn != null)
        {
            <dt class="col-sm-2"></dt>
            <dd class="col-sm-10">
                <a asp-controller="Comment" asp-action="Index" asp-route-postID="@Model.Post.ID">Comments</a>
            </dd>
        }

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.PersonUsername)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.PersonUsername)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Group)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.TimeOfCreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.TimeOfCreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Content)
        </dd>
        <dt class="col-sm-2"></dt>

        @if (Model.LikedByUser)
        {
            <dd class="col-sm-10">
                <a asp-action="DislikePost" asp-route-id="@Model.Post.ID">Dislike</a>
            </dd>
        }
        else if (Friends.Controllers.HomeController.usernameSignedIn != null)
        {
            <dd class="col-sm-10">
                <a asp-action="LikePost" asp-route-id="@Model.Post.ID">Like</a>
            </dd>
        }
    </dl>
</div>
<div>
    @if (Friends.Controllers.HomeController.usernameSignedIn == Model.Post.PersonUsername)
    {
        <a asp-action="Edit" asp-route-id="@Model.Post.ID">Edit</a>
    }
    | <a asp-action="Index">Back to List</a>
</div>
